{
  "name": "sifri-mail",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@azure/msal-browser": "^2.27.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.7.7",
    "dompurify": "^3.2.1",
    "gapi-script": "^1.2.0",
    "i18next": "^25.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.4",
    "react-router-dom": "^7.0.1",
    "react-scripts": "^5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
  "start": "set HTTPS=true&&set PORT=5003&&set SSL_CRT_FILE=ssl/localhost-cert.pem&&set SSL_KEY_FILE=ssl/localhost-key.pem&&react-scripts start",
    "build": "react-scripts build",
    "electron": "electron ../../main.js",
    "electron:dev": "concurrently \"SET BROWSER=none && SET HTTPS=false && SET PORT=5002 && npm start\" \"wait-on http://localhost:5002 && electron ../../main.js\"",
    "electron:build": "npm run build && electron-builder",
    "electron:dist": "electron-builder -mwl",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "install:force": "npm install --force",
    "install:legacy": "npm install --legacy-peer-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "wait-on": "^9.0.1"
  }
}
